
server {
    listen 80;  # Listen on port 80 for HTTP traffic
    server_name localhost;  

    location / {
        proxy_pass http://127.0.0.1:3000;  # Proxy pass to the application running on localhost:3000
        proxy_set_header Host $host;  # Set the Host header
        proxy_set_header X-Real-IP $remote_addr;  # Set the X-Real-IP header to the remote address
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;  # Add the original X-Forwarded-For header
        proxy_set_header X-Forwarded-Proto $scheme;  # Set the X-Forwarded-Proto header to the scheme (http or https)
    }
}


